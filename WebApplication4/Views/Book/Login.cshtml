@model UserModel;
@{
    ViewData["Title"] = "Add new user";
}
<div class="Login">
<div class="wrapper">
      <div class="title-text">
        <div class="title login">Login Form</div>
        <div class="title signup">Signup Form</div>
      </div>
      <div class="form-container">
        <div class="slide-controls">
          <input type="radio" name="slide" id="login" checked>
          <input type="radio" name="slide" id="signup">
          <label for="login" class="slide login">Login</label>
          <label for="signup" class="slide signup">Signup</label>
          <div class="slider-tab"></div>
        </div>
        <div class="form-inner">
          <form asp-action="LoginUser" method="post" class="login">
            <pre>
            </pre>
            <div class="field">
              <input asp-for="Email" type="email" placeholder="Email Address" required>
            </div>
            <div class="field">
              <input asp-for="Password" type="password" placeholder="Password" required>
            </div>
            <div class="pass-link"><a href="#">Forgot password?</a></div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" onclick="alert('User Logged In')" value="Login">
            </div>
            <div class="signup-link">Create an account <a href="">Signup now</a></div>
          </form>
          <form asp-action="AddUser" method="post" class="signup">
            <div class="field">
              <input asp-for="Name" type="text" placeholder="Name" required>

            </div>
            <div class="field">
              <input asp-for="Email" type="email" placeholder="Email Address" required>

            </div>
