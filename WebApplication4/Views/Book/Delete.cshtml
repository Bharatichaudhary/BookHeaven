@model BookModel;
@{
    ViewData["Title"] = "Delete Book";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation For @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group1">
                        <img class="border-info rounded-circle" style="margin:auto" id="ImagePreview"/>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Photos" class="control-label"></label>
                        <input asp-for="Photos" class="form-control" readonly/>
                        <span asp-validation-for="Photos" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"readonly/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Summary" class="control-label"></label>
                        <input asp-for="Summary" class="form-control" readonly/>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Publication" class="control-label"></label>
                        <input asp-for="Publication" class="form-control" readonly/>
                        <span asp-validation-for="Publication" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Genre" class="control-label"></label>
                        <input asp-for="Genre" class="form-control" readonly/>

                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="PreferredAge" class="control-label"></label>
                        <input asp-for="PreferredAge" class="form-control" readonly/>
                        <span asp-validation-for="PreferredAge" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group1">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="BookId"/>
                            <input type="submit" value="Confirm" onclick="alert('Item Deleted')" class="btn btn-danger"style="float:right;"/>

                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </div>
                   
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output=document.getElementById('ImagePreview');
            output.src=$("#Photos").val();
        })
       
    </script>
}