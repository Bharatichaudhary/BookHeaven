@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "List of Book";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/Banner2.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/Banner1.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/Banner3.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="row mainPage">
    <h3> Latest Uploaded</h3>

    @foreach (var item in Model.Reverse().Take(12))
    {
          <div class="col-md-2" >
              <div  id="image_@item.BookId" style="padding:0 0.5rem;height:15rem;">
                        <img src="@item.Photos"style="width:100%;height:100%;"   alt="@item.Name"/>
                        <p class="Add_@item.BookId"style="width:100%;display:none; margin-top:2rem;" >
                         <a style="background-color:aquamarine;color:black;padding:0.8rem 0.2rem;" asp-action="AddToCart" asp-route-id="@item.BookId">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Rs.@item.Price.ToString())
                                </a>
                                </p>
                        </div>

                        <p class="BookName">
                            <a asp-action="Details" asp-route-id="@item.BookId" style="color:black;font-weight:600;margin:0.4rem;">
                            @item.Name:@item.Genre
                            </a>
                        </p>
                  
          </div>
    
    }
</div>
 <footer style="background-color:darkgray; padding:1rem 0; ">
        <div class="container">
  <div class="row">
    <div class="col-sm">
        <div class="foot">Contact Us:</div>
      <div><i class="bi bi-telephone"></i> 9801234567</div>
      <div><i class="bi bi-geo-alt"></i> Gwarko,Lalitpur</div>
      <div><i class="bi bi-envelope"></i> bookheaven12@gmail.com</div>
    </div>
    <div class="col-sm">
        <div class="foot">Follow Us on:</div>
     <i class="bi bi-facebook"></i>
     <i class="bi bi-whatsapp"></i>
     <i class="bi bi-instagram"></i>
     <i class="bi bi-twitter"></i>
     <i class="bi bi-skype"></i>
    </div>
    <div class="col-sm">
        <div class="foot" >We Support:</div>
           <img src="~/KhaltiLogo.png" style="width:5rem; margin-right:5px;" alt="...">
           <img src="~/EsewaLogo.png" style="width:5rem;" alt="...">


    </div>
  </div>
</div>
<div class="text-center">
            &copy; 2023 - Book_Heaven
            </div>
       
    </footer>
@section Scripts {
    @foreach (var item in Model)
{
    <script>
        $("#image_@item.BookId").on("mouseenter", function() {
            $(".Add_@item.BookId").css("display", "block");
            $(".Add_@item.BookId").css("margin-top", "-2rem");

        });

        $("#image_@item.BookId").on("mouseleave", function() {
            $(".Add_@item.BookId").css("display", "none");
        });
    </script>
}

}
